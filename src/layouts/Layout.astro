---
import '../styles/global.css';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-terminal-bg text-white font-mono">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col">
		<nav class="p-6 flex justify-between items-center text-xs border-b border-white/5">
			<div class="flex gap-4">
				<span class="text-terminal-purple font-bold">DARLINGSON</span>
				<a href="#projects" class="hover:text-terminal-purple">./PROJECTS</a>
				<a href="#projects" class="hover:text-terminal-purple">./BLOG</a>
			</div>
			<div class="flex items-center gap-2">
				<span class="w-2 h-2 rounded-full bg-terminal-green animate-pulse"></span>
				<span class="text-[10px] opacity-50 uppercase">Production_Server: Online</span>
			</div>
		</nav>

		<main class="flex-grow p-4 md:p-12">
			<slot />
		</main>

		<footer class="p-2 border-t border-white/5 flex justify-between text-[10px] opacity-40">
			<div class="flex gap-4">
				<span>CPU_LOAD: 0.12MS</span>
				<span>MEM_USAGE: 4.2GB</span>
			</div>
			<div class="flex gap-4 uppercase">
				<span>Uptime: 99.9%</span>
				<span class="text-terminal-green">‚óè System_Stable</span>
			</div>
		</footer>
	</body>
</html>