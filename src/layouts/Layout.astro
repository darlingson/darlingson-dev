---
import '../styles/global.css';
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-terminal-bg text-white font-mono">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
    </head>
    <body class="min-h-screen flex flex-col overflow-x-hidden">
        <nav class="p-6 flex justify-between items-center text-xs border-b border-white/5 sticky top-0 bg-terminal-bg z-50">
            <div class="flex items-center gap-4">
                <span class="text-terminal-purple font-bold">DARLINGSON</span>
                <div class="hidden md:flex gap-4">
                    <a href="#projects" class="hover:text-terminal-purple">./PROJECTS</a>
                    <a href="#projects" class="hover:text-terminal-purple">./BLOG</a>
                </div>
            </div>

            <div class="flex items-center gap-4">
                <div class="flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full bg-terminal-green animate-pulse"></span>
                    <span class="text-[10px] opacity-50 uppercase hidden sm:inline">Production_Server: Online</span>
                    <span class="text-[10px] opacity-50 uppercase sm:hidden">Online</span>
                </div>

                <button id="menu-btn" class="md:hidden text-terminal-purple focus:outline-none" aria-label="Toggle Menu">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>
            </div>

            <div id="mobile-menu" class="hidden absolute top-full left-0 w-full bg-terminal-bg border-b border-white/5 flex flex-col p-6 gap-4 md:hidden">
                <a href="#projects" class="hover:text-terminal-purple">./PROJECTS</a>
                <a href="#projects" class="hover:text-terminal-purple">./BLOG</a>
            </div>
        </nav>

        <main class="flex-grow p-4 md:p-12">
            <slot />
        </main>

        <footer class="p-4 md:p-2 border-t border-white/5 flex flex-col md:flex-row justify-between text-[10px] opacity-40 gap-2">
            <div class="flex justify-between md:justify-start gap-4">
                <span>CPU_LOAD: 0.12MS</span>
                <span>MEM_USAGE: 4.2GB</span>
            </div>
            <div class="flex justify-between md:justify-end gap-4 uppercase">
                <span>Uptime: 99.9%</span>
                <span class="text-terminal-green">‚óè System_Stable</span>
            </div>
        </footer>

        <script>
            const btn = document.getElementById('menu-btn');
            const menu = document.getElementById('mobile-menu');

            btn?.addEventListener('click', () => {
                menu?.classList.toggle('hidden');
            });
        </script>
    </body>
</html>