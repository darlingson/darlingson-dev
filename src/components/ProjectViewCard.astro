---
interface Props {
  title: string;
  fileName: string;
  tags: string[];
  description: string;
  branch: string;
  stability: string;
  metaLabel: string; // e.g., "COVERAGE" or "LATENCY"
  metaValue: string;
  action: string;
}

const { title, fileName, tags, description, branch, stability, metaLabel, metaValue, action } = Astro.props;
---

<div class="bg-terminal-window border border-white/5 rounded-lg overflow-hidden flex flex-col">
  <div class="bg-white/5 px-4 py-2 flex justify-between items-center border-b border-white/5">
    <div class="flex gap-1.5">
      <div class="w-2.5 h-2.5 rounded-full bg-red-500/40"></div>
      <div class="w-2.5 h-2.5 rounded-full bg-yellow-500/40"></div>
      <div class="w-2.5 h-2.5 rounded-full bg-green-500/40"></div>
    </div>
    <span class="text-[10px] opacity-40 uppercase font-bold tracking-widest">{fileName}</span>
    <div class="flex gap-2 opacity-30">
        <div class="w-3 h-3 border border-current rounded-sm"></div>
    </div>
  </div>

  <div class="p-6">
    <div class="flex justify-between items-start mb-2">
      <h3 class="text-2xl font-bold tracking-tight">{title}</h3>
      <div class="flex gap-2">
        {tags.map(tag => (
          <span class="text-[9px] px-2 py-0.5 border border-white/10 bg-white/5 opacity-60 rounded">{tag}</span>
        ))}
      </div>
    </div>

    <div class="flex items-center gap-4 text-[10px] mb-6 opacity-50">
      <span class="flex items-center gap-1"> {branch}</span>
      <span class="flex items-center gap-1 text-terminal-green">● passing</span>
    </div>

    <div class="bg-black/40 border border-white/5 rounded p-4 mb-6">
      <div class="text-xs text-terminal-gray mb-2">cat README.md</div>
      <p class="text-sm leading-relaxed opacity-80 italic">
        {description}
      </p>
    </div>

    <div class="grid grid-cols-3 items-end text-[10px] uppercase font-bold">
      <div>
        <div class="opacity-30 mb-1">Branch:</div>
        <div class="text-terminal-purple">{branch}</div>
      </div>
      <div>
        <div class="opacity-30 mb-1">Stability:</div>
        <div class={stability === 'PRODUCTION' ? 'text-terminal-green' : 'text-terminal-yellow'}>{stability}</div>
      </div>
      <div>
        <div class="opacity-30 mb-1">{metaLabel}:</div>
        <div>{metaValue}</div>
      </div>
      <div class="col-span-3 text-right mt-[-10px]">
        <span class="text-white hover:text-terminal-purple cursor-pointer transition-colors border-b border-white/20 pb-0.5">
            {action} ↗
        </span>
      </div>
    </div>
  </div>
</div>